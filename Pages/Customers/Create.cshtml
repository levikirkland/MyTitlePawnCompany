@page
@model MyTitlePawnCompany.Pages.Customers.CreateModel
@{
    ViewData["Title"] = "Create Customer";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1>Create New Customer</h1>

            <form method="post">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Customer.FirstName" class="form-label">First Name *</label>
                            <input asp-for="Customer.FirstName" class="form-control" required />
                            <span asp-validation-for="Customer.FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Customer.LastName" class="form-label">Last Name *</label>
                            <input asp-for="Customer.LastName" class="form-control" required />
                            <span asp-validation-for="Customer.LastName" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Customer.Email" class="form-label">Email *</label>
                            <input asp-for="Customer.Email" type="email" class="form-control" required />
                            <span asp-validation-for="Customer.Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Customer.PhoneNumber" class="form-label">Phone Number</label>
                            <input asp-for="Customer.PhoneNumber" class="form-control" />
                            <span asp-validation-for="Customer.PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Customer.Address" class="form-label">Address</label>
                    <input asp-for="Customer.Address" class="form-control" />
                    <span asp-validation-for="Customer.Address" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Customer.SSN" class="form-label">SSN</label>
                            <input asp-for="Customer.SSN" class="form-control" />
                            <span asp-validation-for="Customer.SSN" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Customer.DriversLicense" class="form-label">Driver's License</label>
                            <input asp-for="Customer.DriversLicense" class="form-control" />
                            <span asp-validation-for="Customer.DriversLicense" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Customer.DateOfBirth" class="form-label">Date of Birth</label>
                    <input asp-for="Customer.DateOfBirth" type="date" class="form-control" />
                    <span asp-validation-for="Customer.DateOfBirth" class="text-danger"></span>
                </div>

                <!-- Employment Information Section -->
                <div style="border-top: 2px solid #e0e0e0; padding-top: 20px; margin-top: 20px;">
                    <h5 style="margin-bottom: 15px;">Employment Information</h5>
                    
                    <div class="mb-3">
                        <label asp-for="Customer.PlaceOfEmployment" class="form-label">Place of Employment</label>
                        <input asp-for="Customer.PlaceOfEmployment" class="form-control" />
                        <span asp-validation-for="Customer.PlaceOfEmployment" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Customer.EmploymentPhoneNumber" class="form-label">Employment Phone Number</label>
                                <input asp-for="Customer.EmploymentPhoneNumber" class="form-control" />
                                <span asp-validation-for="Customer.EmploymentPhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Customer.YearsEmployed" class="form-label">Years Employed</label>
                                <input asp-for="Customer.YearsEmployed" type="number" min="0" class="form-control" />
                                <span asp-validation-for="Customer.YearsEmployed" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Customer.EmploymentAddress" class="form-label">Employment Address</label>
                        <input asp-for="Customer.EmploymentAddress" class="form-control" />
                        <span asp-validation-for="Customer.EmploymentAddress" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Create Customer</button>
                    <a asp-page="./Index" class="btn btn-secondary">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
