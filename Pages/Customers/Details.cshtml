@page
@model MyTitlePawnCompany.Pages.Customers.DetailsModel
@{
    ViewData["Title"] = "Customer Details";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-8">
            <h1>@Model.Customer?.FirstName @Model.Customer?.LastName</h1>
        </div>
        <div class="col-md-4 text-right">
            <a asp-page="Edit" asp-route-id="@Model.Customer?.Id" class="btn btn-warning">Edit</a>
            <a asp-page="./Index" class="btn btn-secondary">Back</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Personal Information</h5>
                </div>
                <div class="card-body">
                    <p><strong>Email:</strong> @Model.Customer?.Email</p>
                    <p><strong>Phone:</strong> @Model.Customer?.PhoneNumber</p>
                    <p><strong>Address:</strong> @Model.Customer?.Address</p>
                    <p><strong>SSN:</strong> @(string.IsNullOrEmpty(Model.Customer?.SSN) ? "N/A" : Model.Customer.SSN)</p>
                    <p><strong>Driver's License:</strong> @(string.IsNullOrEmpty(Model.Customer?.DriversLicense) ? "N/A" : Model.Customer.DriversLicense)</p>
                    <p><strong>Date of Birth:</strong> @Model.Customer?.DateOfBirth.ToString("MM/dd/yyyy")</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Account Information</h5>
                </div>
                <div class="card-body">
                    <p><strong>Created:</strong> @Model.Customer?.CreatedDate.ToString("MM/dd/yyyy hh:mm tt")</p>
                    <p><strong>Status:</strong> <span class="badge @(Model.Customer?.IsActive == true ? "bg-success" : "bg-danger")">@(Model.Customer?.IsActive == true ? "Active" : "Inactive")</span></p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5>Employment Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Place of Employment:</strong> @(string.IsNullOrEmpty(Model.Customer?.PlaceOfEmployment) ? "N/A" : Model.Customer.PlaceOfEmployment)</p>
                            <p><strong>Employment Phone:</strong> @(string.IsNullOrEmpty(Model.Customer?.EmploymentPhoneNumber) ? "N/A" : Model.Customer.EmploymentPhoneNumber)</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Years Employed:</strong> @(Model.Customer?.YearsEmployed?.ToString() ?? "N/A")</p>
                            <p><strong>Employment Address:</strong> @(string.IsNullOrEmpty(Model.Customer?.EmploymentAddress) ? "N/A" : Model.Customer.EmploymentAddress)</p>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a asp-page="Edit" asp-route-id="@Model.Customer?.Id" class="btn btn-sm btn-warning">Edit Employment Info</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <h5>References</h5>
                        </div>
                        <div class="col-md-6 text-right">
                            <a asp-page="/Customers/References" asp-route-id="@Model.Customer?.Id" class="btn btn-sm btn-primary">Manage References</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Vehicles</h5>
                        </div>
                        <div class="col-md-6 text-right">
                            <a asp-page="/Vehicles/Create" asp-route-customerId="@Model.Customer?.Id" class="btn btn-sm btn-primary">Add Vehicle</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.Vehicles.Count > 0)
                    {
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>VIN</th>
                                    <th>Make/Model</th>
                                    <th>Year</th>
                                    <th>Estimated Value</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var vehicle in Model.Vehicles)
                                {
                                    <tr>
                                        <td>@vehicle.VIN</td>
                                        <td>@vehicle.Make @vehicle.Model</td>
                                        <td>@vehicle.Year</td>
                                        <td>$@vehicle.EstimatedValue.ToString("N2")</td>
                                        <td>
                                            <a asp-page="/Vehicles/Details" asp-route-id="@vehicle.Id" class="btn btn-sm btn-info">View</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>No vehicles found. <a asp-page="/Vehicles/Create" asp-route-customerId="@Model.Customer?.Id">Add one now</a></p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
